// bagunasjohnrey/prepify/Prepify-main/vercel.json
{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      // Catch all requests starting with /api/ and pass them to the serverless function.
      // This is necessary for POST /api/auth/login 404 error too.
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      // CRITICAL SOCKET.IO FIX: Catch all requests starting with /socket.io/ and pass them to the serverless function.
      // We rely on Vercel's default handling to append the path and query string to the destination file.
      "src": "/socket.io/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/client/assets/$1"
    },
    {
      "src": "/(.*)\\.(ico|png|svg|jpg|jpeg|css|js)",
      "dest": "/client/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ]
}
